<!DOCTYPE html>
<html>
  <head>
    <title>Femry</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/3.4.1/select2.min.css" rel="stylesheet">
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/select2/3.4.1/select2.min.js' %>
  </head>

  <body>
    <header class="p-1 px-md-4 mb-2 header-bg border-bottom box-shadow">
      <div>
        <%= render partial: 'shared/header' %>
      </div>
    </header>
    <div class="container">
      <div class="row">
      <div class="col-md-12">
        <div class="mt-3" id="message_container">
          <%= render partial: 'shared/messages' %>
        </div>
      <%# if flash[:notice].present? %>
        <!-- <div class="alert alert-success mt-3">
          <div class="notice"><%= notice %></div>
        </div> -->
      <%# elsif flash[:error].present? %>
        <!-- <div class="alert alert-danger mt-3">
          <div class="alert"><%= alert %></div>
        </div>  --> 
      <%# end %>
      </div>
      </div>
      <%= yield %>
    </div>
    <footer class="mt-5">
      <%= render partial: 'shared/footer' %>
    </footer>
    <div class="d-none" id="page-loader">
      <h3><i class="fa fa-circle-o-notch fa-spin fa-2x"></i></h3>
    </div>
  </body>
</html>
