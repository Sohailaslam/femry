<div class="row">
  <div class="col-md-12">
    <div class="login mt-5">
      <h1>Login here</h1>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {"data-parsley-validate" => ''}, validate: true) do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: false, autocomplete: "email", placeholder: "Email", required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control icon-password', required: true, placeholder: 'Password' %>
          <i class="fa fa-lock"></i>
        </div>
        <div class="form-group">
          <hr>
          <p class="form-text text-muted">Password must be at least 8 characters long and can’t be the things like”password”, “12345678” or “abcdefgh" or "abc123"</p>
        </div>
        <div class="form-group">
          <%= link_to "Forget Password", new_user_password_path, id:"forget-password", class: "forget-password" %>
        </div>
        <div class="text-center"> 
          <%= f.button :submit, class: 'btn btn-success btn-custom text-center' do %>
            Login <i class="fa fa-arrow-right"></i>
           <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
