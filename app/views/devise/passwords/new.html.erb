<div class="row mt-2 mb-2 height">
	<div class="col-md-12">
		<div class="login">
			<h1>Password Reset?</h1>
			<p>To reset your password, enter the email address you use to sign in to <b>Femry.com</b> </p>
			<div class="row form-setting">
				<div class="col-md-12">
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-parsley-validate" => true }) do |f| %>
		  			<%= devise_error_messages! %>

					  <div class="field form-group mt-1">
					    <%= f.label :email do %>
		          	Email<span class="text-danger"> (required)</span>
		          <% end %>
		          <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
					  </div>

					  <div class="form-group mt-4">
		          <div class="text-right actions">
		          	<%= f.submit "Get Reset Link", class: 'btn btn-success btn-custom btn-block' %>
		          </div>
		        </div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>