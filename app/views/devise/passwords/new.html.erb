<div class="row mt-5 mb-4">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<h2>Forgot your password?</h2>
		<div class="row form-setting">
			<div class="col-md-12">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  			<%= devise_error_messages! %>

				  <div class="field form-group mt-4">
				    <%= f.label :email do %>
	          	Email<span class="text-danger"> (required)</span>
	          <% end %>
	          <%= f.email_field :email, autofocus: true, required: true, class: 'form-control form-control-lg' %>
				  </div>

				  <div class="form-group mt-4">
	          <div class="text-right actions">
	          	<%= f.submit "Send instructions", class: 'btn btn-primary' %>
	          </div>
	        </div>
				<% end %>
			</div>
		</div>
	</div>
</div>