<div class="row mt-2 mb-2 height">
	<div class="col-md-12 login">
		<h1>Forgot your password?</h1>
		<div class="row form-setting">
			<div class="col-md-12">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, "data-parsley-validate" => true }) do |f| %>
	  			<%= devise_error_messages! %>

				  <div class="field form-group mt-4">
				    <%= f.label :email do %>
	          	Email<span class="text-danger"> (required)</span>
	          <% end %>
	          <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
				  </div>

				  <div class="form-group mt-4">
	          <div class="text-right actions">
	          	<%= f.submit "Send instructions", class: 'btn btn-success btn-custom' %>
	          </div>
	        </div>
				<% end %>
			</div>
		</div>
	</div>
</div>