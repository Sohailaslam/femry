<% unless params['noflash'].present? %>
	$(".profile-message").removeClass("d-none");
	$("#profile_alert_box").show();
	$("#profile_alert_box").css('opacity', 1);
<% end %>

<% if resource.errors.present? %>
	$('#message_container').html("<%= escape_javascript(render partial: 'shared/messages', locals: {flash: flash})%>")
	$(".profile-message").addClass("d-none");
<% else %>
	$('#avatar_section').html("<%= escape_javascript(render partial: 'users/avatar_section')%>")
	<% unless params['noflash'].present? %>
		_html = "<div class='col-md-12'><div class='alert alert-success profile-message'>Profile updated successfully</div></div>";
		$("#profile_alert_box").html(_html);
		$("#profile_alert_box").css('height', '60px');
		$('#profile_alert_box').fadeTo(3000, 0.01, function(){ 
	    	$(this).slideUp(500, function() {
	    		$(".profile-message").remove();
	    		$("#profile_alert_box").css('height', '0');
	    	}); 
		});
	<% end %>
<% end %>

