<div class="row">
	<div class="col-4">
		<%= link_to current_user.present? ? current_user.is_admin? ? admin_root_path  : authenticated_root_path : root_path do %>
			<%= image_tag 'logo.png', alt: '', class: 'logo-footer' %>
		<% end %>
	</div>
	<div class="col-8 text-right">
		<% if current_user.present? %>
			<%= link_to 'Settings', edit_user_registration_path, class: 'btn btn-success btn-sm' %> 
			<%= link_to 'Log out', destroy_user_session_path, class: 'btn btn-primary btn-sm', method: :delete %>
		<% else %>
			<%= link_to 'Sign in', new_user_session_path, class: 'btn btn-success btn-sm' %>
			<%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-sm' %>
		<% end %>
	</div>
</div>