<li class='nested-fields thoughts' id="thought_<%= f.object.id %>">
  <div class="row">
    <div class="col-11">
      <div class="form-group">
        <%= f.cktext_area :title, class: 'm-0 thought-area form-control editor', contenteditable: true %>
       
      </div>
      <%= f.hidden_field :thought_date %>
    </div>
    <div class="col-1">
      <div class="pull-right icon-fa">
        <%= f.hidden_field :_destroy, value: false %>
        <%= link_to 'javascript:void(null);', :partial => 'thought_fields', id: 'delete_button', data: { toggle: 'modal', target: "#myModal" } do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </div>
    </div>
  </div>

</li>

