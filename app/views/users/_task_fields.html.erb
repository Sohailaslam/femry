<li class="nested-fields ui-state-default ui-sortable-handle" id="task_<%= f.object.id %>" data-id="<%= f.object.id %>" data-pos="<%= f.object.sort %>">
  <div class="checkbox checkbox-success pull-left">
		<%= f.check_box :status, id: "check#{f.object.id}", class: 'styled check-box'  %>
    <label for="check<%= f.object.id %>" class="m-0">
			<%= f.text_area :title, class: 'm-0 title', placeholder: 'Add task here' %>
    </label>
  </div>
  <%= f.hidden_field :task_date %>
  <div class="pull-right icon-fa">
    <%= link_to_remove_association f, :partial => 'task_fields', id: 'delete_button' do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </div>
</li>

