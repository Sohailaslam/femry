<div class='nested-fields add-thougt-box'>
  <div class="col-11 mt-3 float-left">
    <div class="form-group">
      <%= f.cktext_area :title, class: 'm-0 thought-area form-control editor'%>
      <%= f.hidden_field :thought_date, value: @key %>
    </div>   
  </div>
  <div class="col-1 mt-3 pt-2 float-left">
    <div class="icon-fa">
      <%= link_to_remove_association f, :partial => 'new_thought_fields' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>  
  </div>
</div>